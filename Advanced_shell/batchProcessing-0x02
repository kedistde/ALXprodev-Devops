#!/bin/bash
for p in bulbasaur ivysaur venusaur charmander charmeleon; do
    curl -s "https://pokeapi.co/api/v2/pokemon/$p" -o "$p.json" || echo "Failed $p" > errors.txt
    sleep 1
done
for pokemon in "${pokemons[@]}"; do
    # Convert to lowercase for filename
    filename=$(echo "$pokemon" | tr '[:upper:]' '[:lower:]').json
    
    # Make API request
    curl -s "https://pokeapi.co/api/v2/pokemon/$pokemon" -o "$filename" || echo "Failed to get $pokemon" >&2
    
    # Add delay to avoid rate limiting (1 second between requests)
    sleep 1
done
